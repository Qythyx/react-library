{
	"compilerOptions": {
		"composite": true,
		"target": "ES2020",
		"module": "nodenext",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"jsx": "react",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "nodenext",
		"rewriteRelativeImportExtensions": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"types": ["jest", "@testing-library/jest-dom"],
		"isolatedModules": true
	},
	"include": [
		"src/**/*",
		"public/**/*",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}